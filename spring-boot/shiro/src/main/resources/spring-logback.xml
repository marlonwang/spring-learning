<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <property firstname="LOG_HOME" value="${user.dir}/logs" />

    <appender firstname="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level %logger{32} [%L] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender firstname="shiro" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_HOME}/shiro.log</File>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level %logger{0} [%L] - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/shiro.%d{yyyy-MM-dd}.log
            </FileNamePattern>
            <MaxHistory>7</MaxHistory>
        </rollingPolicy>
    </appender>

    <appender firstname="thirdlib" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_HOME}/thirdlib.log</File>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level %logger{32} [%L] - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/thirdlib.%d{yyyy-MM-dd}.log
            </FileNamePattern>
            <MaxHistory>7</MaxHistory>
        </rollingPolicy>
    </appender>

<!--    <logger firstname="net.logvv" level="info" addtivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>-->

    <logger firstname="net.logvv" level="info" addtivity="false">
        <appender-ref ref="shiro"/>
    </logger>

    <root level="debug">
        <appender-ref ref="thirdlib" />
    </root>
</configuration>